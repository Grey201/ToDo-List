<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDo_List</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>ToDo List</h1>
      <% if(errors) { %>
      <ul class="errors">
        <% errors.forEach(error => { %>
        <li class="task error"><%=error.msg %></li>
        <% }) %>
      </ul>
      <% } %>
      <form class="addTask" action="/todos" method="post">
        <input type="text" name="title" placeholder="Title" />
        <textarea name="description" placeholder="Description"></textarea>
        <button type="submit">Add To Do</button>
        <ul id="list"></ul>
      </form>
      <ul>
        <% todos.forEach(todo => { %>
        <li class="task">
          <form
            class="updateTask"
            action="/todos/update/<%= todo._id %>?_method=PUT"
            method="POST"
          >
            <input
              type="text"
              name="title"
              value="<%= todo.title %>"
              required
            />
            <textarea name="description" placeholder="Description">
<%= todo.description %></textarea
            >
            <input type="checkbox" name="completed" <%= todo.completed
            ?"checked": "" %> >
            <button type="submit">Update</button>
          </form>
          <form
            action="/todos/delete/<%= todo._id %>?_method=delete"
            method="POST"
          >
            <button type="submit">Delete</button>
          </form>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
